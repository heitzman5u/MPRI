
% Fonction qui calcule le barycentre d'une matrice comportant des 0 et des
% 1.

function [y, x] = barycentre(matrice)

[height, width] = size(matrice);
cpt = 0;
for w = 1 : weight
    for h = 1 : height
       if matrice(h, w) == 1
           cpt = cpt +1;
           m2(1,cpt) = w;
           m2(2,cpt) = h;
       end
    end
end

x = mean(m2, 1);
y = mean(m2, 2);


end